<!DOCTYPE html>
<html>
  <head>
    <title>CRM - Rails</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
  </head>
  <body>
    <nav class='navbar navbar-default'>
      <div class='container'>
        <div class='navbar-header'>
          <%= link_to "Customers", root_path, class: 'navbar-brand' %>
        </div>
      </div>
    </nav>
    <div class='container'>
      <% if flash[:success] %>
        <div class='row'>
          <div class='alert alert-success'>
            <%= flash[:success] %>
          </div>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
